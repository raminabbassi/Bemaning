@page "/contact"
<main>
    <h1>Kontakt</h1>

    <!-- Kontaktcontainer som matchar den nya CSS-stilen -->
    <div class="contact-container">
        <div class="contact-info">
            <p>Har du frågor? Kontakta oss på:</p>
            <p><i class="fa fa-envelope"></i> Email: <a href="mailto:info@Extendly.se">info@Extendly.se</a></p>
            <p><i class="fa fa-phone"></i> Telefon: 010-123456</p>
        </div>

        <!-- Kontaktformulär -->
        <form>
            <h3>Skicka oss ett meddelande</h3>

            <!-- Namn -->
            <label for="name">Namn:</label>
            <input type="text" id="name" name="name" required />

            <!-- E-post -->
            <label for="email">E-post:</label>
            <input type="email" id="email" name="email" required />

            <!-- Meddelande -->
            <label for="message">Meddelande:</label>
            <textarea id="message" name="message" required></textarea>

            <!-- Skicka knapp -->
            <button type="submit">Skicka</button>
        </form>
    </div>
</main>