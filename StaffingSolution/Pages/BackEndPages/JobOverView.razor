@page "/BackEndPages/joboverview"
@using StaffingSolution.Services
@using StaffingSolution.Interfaces
@using StaffingSolution.Models
@inject IJobApplicationService JobApplicationService
@inject IAuthService AuthService
<link href="/css/JobOverView.css" rel="stylesheet" />

<h3>Jobb du har sökt</h3>

@if (jobs == null || jobs.Count == 0)
{
    <p>Du har inte sökt några jobb ännu.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Status</th>
                <th>Ansökningsdatum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in jobs)
            {
                <tr>
                    <td data-label="Titel">@job.Title</td>
                    <td data-label="Status">@job.Status</td>
                    <td data-label="Ansökningsdatum">@job.AppliedDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>

}

